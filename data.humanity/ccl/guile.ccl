(define *scheme* 'guile)

(define (intern str)
  (string->symbol str))

(define (writes port str)
  (cond ((equal? port nil)
         (display str))
        (else
         (display "FIXME: guile.ccl: Port not supported: ")(display port)(newline)
         (display str))))

(define (os-classification)
  'unix)

(define (trunc val)
  (inexact->exact (truncate val)))

(define (symbol-bound? sym env)
  (defined? sym))

(define (nth n lst)
  (list-ref lst n))

(define rand random)

(define (ccl:load filename)
  (load (substring filename 4)))

(display "Using Scheme: Guile\n")

